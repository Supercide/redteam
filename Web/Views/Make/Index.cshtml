@using Web.Models
@model IEnumerable<Supercar>

@{
  ViewBag.Title = ViewBag.Make + "s";
}

<h2>@ViewBag.Title</h2>

<div class="row marketing">
  <div class="span3" style="text-align: left;">
    <img src="/Images/Makes/@(ViewBag.MakeId).png" alt="@ViewBag.Make"/>
  </div>
  @foreach (var supercar in Model)
  {
    <div class="span3">
      <div class="thumbnail">
        <div class="thumbnail-container">
          <a href="/Supercar/@(supercar.SupercarId)">
            <img src="/Images/Cars/@(supercar.SupercarId)/1.jpg" alt="@supercar.Model" style="height: 140px;"/>
          </a>
        </div>
        <div class="caption">
          <h3>@supercar.Model</h3>
          <p>
            @Html.ActionLink("View", "Index", "Supercar", new { id = supercar.SupercarId }, new { @class = "btn btn-primary" })
          </p>
        </div>
      </div>
    </div>
  }
</div>
